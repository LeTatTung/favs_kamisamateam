      <% posts.each do |post| %>
        <%= render "pages/mini_home_page",  post: post %>
      <% end %>
    </div>

    <!-- About/Information menu -->
    <div class="w3-col l4">
      <!-- About Card -->
      <div class="w3-white w3-margin">
        <img src="https://zulikvietnam.files.wordpress.com/2013/05/03-jpg-1365671215_500x0.jpg" alt="Jane" style="width:100%" class="w3-grayscale">
