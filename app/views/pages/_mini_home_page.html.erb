<div class="w3-container w3-white w3-margin w3-padding-large">
  <div class="w3-center">
    <h3><%= post.title %></h3>
    <h5><%= post.user.name %>さん、<span class="w3-opacity"><%= post.created_at%></span></h5>
  </div>

  <div class="w3-justify">
    <div class="w3-padding-16 post-index-image">
      <div class="image-name"><%= image_name = post.image %></div>
      <%= image_tag(image_name) %>
    </div>
    <p><%= post.content %></p>
    <p class="w3-clear"></p>
  </div>
</div>
<hr>
