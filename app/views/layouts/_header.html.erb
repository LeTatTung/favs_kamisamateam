<header class="navbar navbar-fixed-top navbar-inverse header">
  <div class="container">
    <div class="logo">
      <%= link_to t("app_title"), root_path %>
    </div>
    <div class="header-search col-md-4">
      <%= form_tag searches_path, method: :get, class: "form-search" do %>
        <span>
          <%= text_field_tag :search, params[:search], autocomplete: :off,
            placeholder: t("search"), class: "form-control movies-search",
            id: "movies-search" %>
          <i class="fa fa-search" aria-hidden="true"></i>
        </span>
      <% end %>
      <span class="search-results">
        <ul class="results">
        </ul>
      </span>
    </div>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li>
          <div class="home">
            <%= link_to t("pages.home"), root_path %>
          </div>
        </li>
        <% if user_signed_in? %>
          <li>
            <div class="home">
              <%= link_to t("log-out"), destroy_user_session_path, method: :delete %>
            </div>
          </li>
        <% else %>
          <li>
            <div class="sign-in">
              <%= link_to new_user_session_path, class: "btn btn-primary" do %>
                <i class="fa fa-sign-in" aria-hidden="true"></i>
                <%= t "log-in" %>
              <% end %>
            </div>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
