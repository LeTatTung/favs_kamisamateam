<% @comments.each do |comment| %>
  $('#posts-comments-<%= @post.id %>')
    .append('<%= j render "comment", comment: comment %>');
  $('#posts-comments-<%= @post.id %>')
    .append('<%= j render "comments/edit_form", comment: comment %>');
<% end %>
<% if @last %>
  $('#load-more-post-comments-<%= @post.id %>').hide();
<% else %>
  $('#load-more-post-comments-<%= @post.id %>')
    .html('<%= link_to t("comment.load_more"), post_comments_path(@post,
    comment_offset: @comments.last.id), remote: true %>');
<% end %>
