<div id="myModal" style="background: transparent;border: none">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close">&times;</button>
        <h4 class="modal-title"><%= t "post_action.new_post" %></h4>
      </div>
      <div class="modal-body">
        <%= form_for(@post = Post.new,{multipart:true}) do |p| %>
        <div class="field">
          <%= p.text_field :title, placeholder: t("post_action.post_title") %>
        </div>
        <div class="field">
          <%= p.file_field :image %>
        </div>
        <div class="field">
          <%= p.select :product_id, products.collect {|product|
            [product.name, product.id]}, {}, class: "form-control" %>
        </div>
        <div class="field">
          <%= p.text_area :content, placeholder: t("post_action.post_content") %>
        </div>
        <div class="actions">
          <%= p.submit %>
        </div>
      <% end %>
      </div>
    </div>

  </div>
</div>
