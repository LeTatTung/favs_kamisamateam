<br><br>
<div class="user">
  <div class="container">
    <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12 user-left">
      <div class="user-avatar">
        <%= image_tag @user.avatar_url, class: "img-responsive avatar" %>
      </div>
      <div class="user-info">
        <div class="info email">
          <label><i class="fa fa-envelope" aria-hidden="true"></i></label>
          <%= @user.email %>
        </div>

        <div class="info nick-name">
          <label><i class="fa fa-user" aria-hidden="true"></i></label>
          <%= @user.name %>
        </div>

        <div class="info birthday">
          <label><i class="fa fa-birthday-cake" aria-hidden="true"></i></label>
          <%= l @user.birthday, format: :default %>
        </div>

        <div class="info sex">
          <label><i class="fa fa-mars-stroke"></i></label>
          <%= @user.sex.capitalize %>
        </div>

        <div class="info review-number">
          <label>
            <i class="fa fa-pencil-square" aria-hidden="true"></i>
          </label>
          <label><%= @user.posts.size %></label>
        </div>
        <% if current_user == @user %>
          <hr>
          <%= link_to "Change information", edit_user_path %>
          <%= link_to "Change password", edit_user_registration_path %>
        <% end %>
        <div class="clearfix"></div>
      </div>
    </div>

    <div class="col-lg-9 col-md-9 col-sm-8 col-xs-12 user-right">
      <hr class="resposive">
      <h4><%= @user.name %>'s posts</h4>
      <hr class="normal">
      <% @posts.each do |post| %>
        <%= render "pages/mini_home_page",  post: post %>
        <hr>
      <% end %>
      <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
    </div>
  </div>
</div>
